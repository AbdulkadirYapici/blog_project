{% extends 'base.html.twig' %}
    {% block stylesheets %}
        {{ parent() }}
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

        <link href="{{ asset('css/homePage.css') }}" rel="stylesheet">
    {% endblock %}
{% block body %}
<body style="background: #42c8f5;">

<br><br><br>
<section>
    {%  if blog is defined %}
        {% for blogdata in blog %}
            <div class='homePageDiv'>
                {% if blogdata.status == 1%}

                    <a href="{{ url('single_entry_show', {id: blogdata.id}) }} "> <img  class="mySlides" src="{{ asset('uploads/afisler/' ~ blogdata.preview_img) }}"  style="width:100%;height:500px;"></a>
                {% endif %}
            </div>
        {% endfor %}
    {% endif %}

    <!-- Side navigation -->
    <div id="menu" class="sidenav">
        <a href="/blogcontent" style="background: #04ba7b">Last Blogs</a>
        {%  if blog is defined %}

            {% for blogdata in blog %}
                {% if blogdata.status == 1%}

                    {{ blogdata.summary }}  <a href="{{ url('single_entry_show', {id: blogdata.id}) }} ">Yazıya git</a> <hr>
                {% endif %}

            {% endfor %}

        {% endif %}
            <button id="hideMenu" class="btn btn-outline-info btn-rounded btn-block waves-effect z-depth-0" type="submit" style="color: #b21f2d ;   opacity: 1.0; background: #7db9da" >Toggle menu</button>​


    </div>



    <section class="w3-container w3-center" style="max-width:100%" >
        <br><h2 class="w3-wide">Blog Contents</h2>
        <p class="w3-opacity"><i>Gitmek istediğiniz blog yazısı için linke tıklayınız</i></p>
    </section>
</section>

{%  if blog is defined %}

    {% for blogdata in blog %}
        {% if blogdata.status == 1%}

            <img src="{{ asset('uploads/afisler/' ~ blogdata.preview_img) }}" style="width:200px;height:121px;"> {{ blogdata.summary }}  <a href="{{ url('single_entry_show', {id: blogdata.id}) }} ">Yazıya git</a> <hr>
        {% endif %}

    {% endfor %}

{% endif %}


</body>

    <div class="footer">
        Footer is always bottom
    </div>
{% endblock %}

{% block javascripts %}
    {{parent()}}

    <script src= "{{asset('js/homePage_slide.js')}}"></script>
    <script src= "{{asset('js/toolbarClearer.js')}}"></script>

{% endblock %}
