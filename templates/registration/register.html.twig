{% extends 'base.html.twig' %}
{% block title %}Sign Up!{% endblock %}
{% block body %}

    {% block head_css %}
        {{ parent() }}

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    {% endblock %}
{{ form_start(form) }}
    {{ form_label(form.name, 'Name') }}
    {{ form_widget(form.name, {'attr': {'class': 'col-2'}}) }}<br>

    {{ form_label(form.email, 'Email') }}
    {{ form_widget(form.email, {'attr': {'class': 'col-2'}}) }}<br>

    {{ form_label(form.password.first, 'Password') }}
    {{ form_widget(form.password.first, {'attr': {'class': 'col-2'}}) }}<br>

    {{ form_label(form.password.second, 'Repeat password') }}
    {{ form_widget(form.password.second, {'attr': {'class': 'col-2'}}) }}<br>



<button type="submit" type="button" class="btn btn-primary" >Register!</button>
    {{ form_end(form) }}



   {{  error }}
{% endblock %}

    {% block javascripts %}
        {{parent()}}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script src= "{{asset('js/toolbarClearer.js')}}"></script>
    {% endblock %}