{% extends 'base.html.twig' %}
{% block title %}Sign Up!{% endblock %}

    {% block head_css %}
        {{ parent() }}

        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    {% endblock %}

{% block body %}
<body style="background:#42c8f5; ">

    <!-- Material form register -->
    <div style="width: 60% ; margin: 0 auto;  margin-top: 10%;" >

        <div class="text-center border border-light p-5" style="background:#42c8f5;">


            <!--Card content-->
            <div class="card-body px-lg-5 pt-0">
                <!-- Form -->
                <form name="user" class="text-center" method="post">
                    <p class="h4 mb-4 " >Sign Up</p>

                    {% if error %}
                        <div class="alert alert-danger">   {{  error }} </div>
                    {% endif %}
                    <div class="form-row">
                        <div class="col">
                            <!-- First name -->
                            <div class="md-form">
                                <input type="text" name= "user[name]" id="user_name" class="form-control" required="required">
                                <label class="required" for="user_name">First name</label>
                            </div>
                        </div>

                    </div>

                    <!-- E-mail -->
                    <div class="md-form mt-0">
                        <input type="email" id="user_email" name="user[email]" class="form-control" required="required">
                        <label class="required" for="user_email">E-mail</label>
                    </div>

                    <!-- Password -->
                    <div class="md-form">
                        <input type="password" id="user_password_first" class="form-control" name="user[password][first]" required="required" >
                        <label class="required" for="user_password_first">Password</label>

                    </div>

                    <div class="md-form">
                        <input type="password" id="user_password_second" name="user[password][second]" class="form-control" required="required" >
                        <label class="required" for="user_password_second">Repeat Password</label>

                    </div>
                    <div class="form-group"><input type="text" id="user_authority" name="user[authority]" style="display:none;" class="form-control"></div>

                    <input type="hidden" name="token" value="{{ csrf_token('register') }}"/>
                    <!-- Sign up button -->

                    <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit" style="color: #b21f2d ;   opacity: 1.0;" >Sign Up</button>

                    <!-- Social register -->

                    <hr>

                    <!-- Terms of service -->
                    <p>By clicking
                        <em>Sign up</em> you agree to our
                        <a href="" target="_blank">terms of service</a>

                </form>
                <!-- Form -->

            </div>

        </div>

    </div>

</body>


    <!-- Material form register -->

{% endblock %}

    {% block javascripts %}
        {{parent()}}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script src= "{{asset('js/toolbarClearer.js')}}"></script>
    {% endblock %}