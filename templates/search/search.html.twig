{% extends 'base.html.twig' %}

{% block title %}Search Results{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/showBlog.css') }}" rel="stylesheet">
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

{% endblock %}

{% block head_css %}
    {{ parent() }}

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
{% endblock %}

{% block body %}
    <body style="background: #42c8f5;">
    <div style="width: 60% ; margin: 0 auto;  margin-top: 2%;" >

        <div class="text-center border border-light p-5" style="background:#42c8f5;">


            <div class="card-body px-lg-5 pt-0">

                {%  if error is defined %}
                    {{ error }}
                {% endif %}

                {%  if blogs is defined %}
                    {% for blogdata in blogs %}

                        <h1  align="center" > {{ blogdata.title }} </h1>
                        <p align="center"><img src="{{ asset('uploads/afisler/' ~ blogdata.preview_img) }}" style="width:200px;height:121px;"></p>
                        <p align="center" style="margin-right: 0px; ">      {{ blogdata.summary|raw  }}<br>{{ blogdata.content |raw }} <hr>
                        </p>

                    {% endfor %}


                {% endif %}

                {%  if category is defined %}
                    {% for categorydata in category %}
                        <h1  align="center" > {{ categorydata.title }} </h1>
                        <p align="center"><img src="{{ asset('uploads/afisler/' ~ categorydata.preview_img) }}" style="width:200px;height:121px;"></p>

                        <p align="center" style="margin-right: 0px; ">   {{ categorydata.summary |raw }}<br>{{ categorydata.content |raw }}<hr>
                        </p>

                    {% endfor %}

                {% endif %}

            </div>

        </div>

    </div>



    </body>


{% endblock %}